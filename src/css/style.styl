@require 'utils/*'
@require 'fragments/*'

html, body
    margin 0
    padding 0
    font-family "kepler-std", script
    font-weight 400
    font-style normal
    color white
    background-color rgb(51,51,51)
    width 100%
    height 100%
    overflow hidden
    pointer-events none

canvas
    width 100%
    height 100%

#credits
    position fixed
    bottom 0
    right 0
    font-family monospace
    padding 1em
    color grey
    text-shadow 1px 1px 1px #ff0000, -1px -1px 1px blue
    font-size 0.8em
    +mq('bp-4')
        font-size 1em

a
    text-decoration none
    color white